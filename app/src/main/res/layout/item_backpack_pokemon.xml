<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/item_backpack_padding">

    <ImageView
            android:id="@+id/backpackPokemonImage"
            android:layout_width="@dimen/item_backpack_image_size"
            android:layout_height="@dimen/item_backpack_image_size"
            android:layout_gravity="center_vertical"/>

    <TextView
            android:id="@+id/backpackPokemonName"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"/>

</LinearLayout>